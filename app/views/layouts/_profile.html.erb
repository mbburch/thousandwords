<div class="row valign-wrapper">
  <div class="card-panel grey lighten-5 z-depth-1" id="user-profile">
    <div id="user-image">
      <%= image_tag @twitter_client.profile_image, class: "circle responsive-img" %>
    </div>
    <div class="black-text center">
      <h4 id="user-name"><%= current_user.name %></h4>
      <h5 id="user-screen_name">@<%= current_user.screen_name %></h5>
      <p id="user-followers"><strong>Followers:</strong> <%= @twitter_client.followers %></p>
      <p id="user-friends"><strong>Following:</strong> <%= @twitter_client.friends %></p>
      <p id="user-tweet-count"><strong>My Total Tweets:</strong> <%= @twitter_client.tweet_count %></p>
    </div>
  </div>
</div>