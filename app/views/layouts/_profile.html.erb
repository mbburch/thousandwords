<div class="card-panel grey lighten-5 z-depth-1" id="user-profile">
  <div class="row valign-wrapper">
    <div class="col s2" id="user-image">
      <%= image_tag @twitter_client.profile_image, class: "circle responsive-img" %>
    </div>
    <div class="col s8">
      <div class="black-text">
        <h4 id="user-name"><%= current_user.name %></h4>
        <h5 id="user-screen_name">@<%= current_user.screen_name %></h5>
        <p id="user-followers">Followers: <%= @twitter_client.followers %></p>
        <p id="user-friends">Following: <%= @twitter_client.friends %></p>
      </div>
    </div>
  </div>
</div>