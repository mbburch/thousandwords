<div class="container">
  <div class="col m8 center">
    <div class="row valign wrapper">
      <h2 class="tweet-header">Share your Thoughts</h2 >
    </div>
    <div class="form-group">
      <%= form_tag(tweets_path, method: :post) do %>
        <span id="tweet-box"><%= text_area_tag(:tweet, nil, placeholder: "Got something to say?", class: "form-control") %></span>
        <span id="new-tweet"><%= submit_tag("Post Tweet", class: "btn btn-success orange darken-4") %></span>
      <% end %>
    </div>
  </div>
</div>

